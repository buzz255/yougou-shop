.order_main .order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.order_main .order_item .order_on_row {
  display: flex;
  padding: 10rpx 0;
  color: #666;
  justify-content: space-between;
}
.order_main .order_item .order_price_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_price_row .order_price_text {
  color: #666;
}
.order_main .order_item .order_price_row .order_price_value {
  color: var(--themeColor);
}
.order_main .order_item .order_time_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_time_row .order_time_text {
  color: #666;
}
