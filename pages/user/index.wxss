page {
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user_info_wrap .user_image_wrap .user_bg {
  filter: blur(10rpx);
}
.user_info_wrap .user_image_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 28%;
  text-align: center;
}
.user_info_wrap .user_image_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_image_wrap .user_info .user_name {
  color: white;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 28%;
  border: 1rpx solid green;
  font-size: 40rpx;
  padding: 30rpx;
  color: green;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  top: -40rpx;
  transform: translateX(-50%);
  color: #666;
  padding-bottom: 100rpx;
}
.user_content .user_main .history_wrap {
  background-color: white;
  display: flex;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .orders_wrap {
  background-color: white;
  margin-top: 30rpx;
}
.user_content .user_main .orders_wrap .orders_title {
  padding: 15rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .order_content {
  display: flex;
}
.user_content .user_main .orders_wrap .order_content navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx;
}
.user_content .user_main .orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
}
.user_content .user_main .address_wrap {
  margin-top: 30rpx;
  padding: 10rpx;
  background-color: white;
}
.user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: white;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recomend_wrap {
  margin-top: 30rpx;
  background-color: white;
  padding: 10rpx;
}
